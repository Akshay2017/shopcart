<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akshay.cart.AddData.AddProduct">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">


        <EditText
            android:id="@+id/pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/pquntity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pname"
            android:layout_alignStart="@+id/pname"
            android:layout_below="@+id/pname"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="Quntity"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/pprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pquntity"
            android:layout_alignStart="@+id/pquntity"
            android:layout_below="@+id/pquntity"
            android:layout_marginTop="42dp"
            android:ems="10"
            android:hint="Price"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/padd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/pprice"
            android:layout_marginTop="25dp"
            android:text="Add Product" />


    </RelativeLayout>


</ScrollView>
